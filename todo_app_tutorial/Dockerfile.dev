# 開發環境用 Dockerfile
FROM ruby:3.3.6

# 安裝系統依賴
RUN apt-get update -qq && \
    apt-get install -y --no-install-recommends \
    build-essential \
    libpq-dev \
    nodejs \
    npm \
    && rm -rf /var/lib/apt/lists/*

# 設定工作目錄
WORKDIR /app

# 複製 Gemfile 並安裝 gems
COPY Gemfile Gemfile.lock ./
RUN bundle install

# 複製程式碼
COPY . .

# 暴露 port
EXPOSE 3000

# 預設指令
CMD ["rails", "server", "-b", "0.0.0.0"]
